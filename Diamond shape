#include <stdio.h>
void sas(int i,int a);
int main()
{
    int a,i;
    printf("Enter an integer: ");
    scanf("%d",&a);
    for(i=1;i<=a;i++) sas(i,a);
    for(i=a-1;i>=1;i--) sas(i,a);

}
void sas(int i,int a)
{
    for(int j=1;j<=a-i;j++) printf(" ");
    for(int k=1;k<=2*i-1;k++) printf("*");
    printf("\n");
}
